pipeline {
    agent any
    environment {
        DOCKER_HUB_USERNAME = credentials("DOCKER_HUB_USERNAME")
        DOCKER_HUB_PASSWORD = credentials("DOCKER_HUB_PASSWORD")
    }
    stages {
        stage('Set Up') {
            steps {
                sh "jenkins/setup.sh"
            }
        }
        stage('Build') {
            steps {
               sh "jenkins/build.sh"
            }
        }
        stage('Test') {
            steps {
                sh "jenkins/test.sh"
            }
        }
        stage('Deploy') {
            steps {
                sh "jenkins/deploy.sh"
            }
        }
    }
}